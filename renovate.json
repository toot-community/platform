{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "kustomize",
        "helmv3"
      ],
      "matchFileNames": [
        "manifests/**/*.yaml"
      ],
      "addLabels": [
        "dependency::{{depName}}"
      ]
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "matchFileNames": [
        "platform/**/*.tf"
      ],
      "addLabels": [
        "dependency::{{depName}}"
      ]
    }
  ]
}